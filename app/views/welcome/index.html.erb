<div class="welcome-box">
  <!--===== 广告轮播 =====-->
  <section class="intro-box">
    <div class="row">
      <div class="col-md-12">
        <div id="intro" class="carousel slide" data-ride="carousel">
          <!--===== 轮播按钮 =====-->
          <ol class="carousel-indicators">
            <li data-target="#intro" data-slide-to="0" class="active"></li>
            <li data-target="#intro" data-slide-to="1"></li>
            <li data-target="#intro" data-slide-to="2"></li>
          </ol>

          <!--===== 轮播内容 =====-->
          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <%= link_to '#', target: "_blank" do %> <!-- 图片连结，点击另开视窗 -->
                <%= image_tag("https://ws2.sinaimg.cn/large/006tNc79ly1fgcs65nhz2j31680jstgt.jpg") %> <!-- 图片位置 -->
                <div class="carousel-caption">
                  <h3>潜水体验</h3> <!-- 标题 -->
                  <p>如鱼得水，激情无限</p> <!-- 内文 -->
                </div>
              <% end %>
            </div>
            <div class="item">
              <%= link_to '#', target: "_blank" do %>
                <%= image_tag("https://ws3.sinaimg.cn/large/006tNc79ly1fgd1ulxc9xj31400iq0yp.jpg") %>
                <div class="carousel-caption">
                  <h3>船宿旅行</h3>
                  <p>精彩纷呈，意犹未尽</p>
                </div>
              <% end %>
            </div>
            <div class="item">
              <%= link_to '#', target: "_blank" do %>
                <%= image_tag("https://ws4.sinaimg.cn/large/006tNc79ly1fgd1sg9d2xj31680jsae5.jpg") %>
                <div class="carousel-caption">
                  <h3>浅海拾贝</h3>
                  <p>物件虽小，意义无穷</p>
                </div>
              <% end %>
            </div>
          </div>

          <!--===== 换页按钮 =====-->
          <a class="left carousel-control" href="#intro" role="button" data-slide="prev">
            <span class="fa fa-angle-left" aria-hidden="true"></span> <!-- 左侧按钮图示 -->
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#intro" role="button" data-slide="next">
            <span class="fa fa-angle-right" aria-hidden="true"></span> <!-- 右侧按钮图示 -->
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!--===== 品牌故事 =====-->
  <section class="story-box">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <h2>品牌故事</h2> <!-- 区块标题 -->
        <h1>潜水的节拍</h1> <!-- 品牌名称 -->
        <div class="short-line"></div> <!-- 分隔线 -->
        <div class="row">
          <div class="col-md-3 col-md-offset-1">
            <%= image_tag("founder.jpg") %> <!-- 创办人头像 1 -->
          </div>
          <div class="col-md-7">
            <h3>节拍</h3> <!-- 创办人姓名 -->
            <p>一天到晚游泳的魚啊！魚不停游。<br/>原谅我这一生不羁放纵爱自由。<br/>体验不一样的旅程，让我一次玩个够。<br/>生活的精彩，一个都不能漏。 </p> <!-- 创办人介绍 -->
          </div>
        </div>
      </div>
    </div>
  </section>

  <!--===== 商品類型 =====-->
  <section class="categories-box">
    <div class="row">
      <div class="col-md-4 category-content">
        <%= link_to 'https://j-and-a-select.herokuapp.com/products?group=%E6%97%A5%E5%B8%B8%E6%96%87%E5%85%B7' , class: "category_1" do %>
          <div class="category-box">
            <%= image_tag("category_1.jpg") %>
          </div>
          <div>
            <h3><%= t('th-desk') %></h3>
            <p><%= t('slogan-desk') %></p>
          </div>
        <% end %>
      </div>
      <div class="col-md-4 category-content">
        <%= link_to 'https://j-and-a-select.herokuapp.com/products?group=%E7%94%9F%E6%B4%BB%E5%99%A8%E7%89%A9' , class: "category_2" do %>
          <div class="category-box">
            <%= image_tag("category_2.jpg") %>
          </div>
          <div>
            <h3><%= t('th-home') %></h3>
            <p><%= t('slogan-home') %></p>
          </div>
        <% end %>
      </div>
      <div class="col-md-4 category-content">
        <%= link_to 'https://j-and-a-select.herokuapp.com/products?group=%E5%80%8B%E4%BA%BA%E5%96%AE%E5%93%81' , class: "category_3" do %>
          <div class="category-box">
            <%= image_tag("category_3.jpg") %>
          </div>
          <div>
            <h3><%= t('th-accessories') %></h3>
            <p><%= t('slogan-accessories') %></p>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!--===== 合作品牌 =====-->
  <section class="brand-box">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <h2>合作品牌</h2> <!-- 副标题 -->
        <div class="short-line"></div> <!-- 分隔线 -->
        <%= image_tag("brand_1.png") %> <!-- 品牌图片 -->
        <%= image_tag("brand_2.png") %>
        <%= image_tag("brand_3.png") %>
        <%= image_tag("brand_4.png") %>
        <%= image_tag("brand_5.png") %>
        <%= image_tag("brand_6.png") %>
        <%= image_tag("brand_7.png") %>
        <%= image_tag("brand_8.png") %>
        <%= image_tag("brand_9.png") %>
      </div>
    </div>
  </section>

  <!--===== 立即购买 =====-->
  <section class="push-box">
    <%= link_to('立即购买', '#', class:'btn btn-push' ) %>
  </section>
</div>
